{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./",
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@server/*": ["source/server/*", "build/server/*"],
      "@api/*": ["source/api/*", "build/api/*"],
      "@core/*": ["node_modules/password-core/dist/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
